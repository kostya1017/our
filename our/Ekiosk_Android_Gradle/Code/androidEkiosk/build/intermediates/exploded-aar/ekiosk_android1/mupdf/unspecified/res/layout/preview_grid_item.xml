<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/PreviewGridItemRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="8dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/preview_grid_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_horizontal"
        android:scaleType="fitXY" />

    <ProgressBar
        android:id="@+id/preview_grid_image_progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/itemPageNumberTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/preview_grid_image"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/preview_grid_image"
        android:background="#BB000000"
        android:gravity="center"
        android:padding="7dp"
        android:text="ABC"
        android:textColor="@color/white" />

</RelativeLayout>

